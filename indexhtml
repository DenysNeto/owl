      function buyUpgrade() {
        if (score >= upgradeCost) {
          score -= upgradeCost;
          clickValue += 2;
          upgradeCost *= 2; // –£–≤–µ–ª–∏—á–∏–≤–∞–µ–º —Ü–µ–Ω—É –≤ 2 —Ä–∞–∑–∞
          document.getElementById("score").textContent = "–û—á–∫–∏: " + score;
          document.querySelector(
            "#increase"
          ).textContent = `–£–ª—É—á—à–∏—Ç—å –∫–ª–∏–∫ (+2) - ${upgradeCost} –æ—á–∫–æ–≤`;
        }
      }

      document
        .getElementById("gameOwl")
        .addEventListener("click", function (event) {
          score += clickValue;
          document.getElementById("score").textContent = score;
          document.getElementById("score").textContent = "–û—á–∫–∏: " + score;
          if (soundEnabled) document.getElementById("clickSound").play();
          this.style.transform = "scale(1.05)";

          setTimeout(() => {
            this.style.transform = "scale(1)";
            this.style.opacity = 1;
          }, 100);
          createClickAnimation(event.clientX, event.clientY, `+${clickValue}`);
        });

      function createClickAnimation(x, y, text) {
        let animation = document.createElement("div");
        animation.className = "click-animation";
        animation.textContent = text;
        animation.style.left = `${x - 10}px`; // –°–º–µ—â–µ–Ω–∏–µ –¥–ª—è —Ü–µ–Ω—Ç—Ä–∏—Ä–æ–≤–∞–Ω–∏—è
        animation.style.top = `${y - 20}px`;
        animation.style.position = "absolute";
        animation.style.zIndex = "1000";
        animation.style.transition = "transform 0.5s, opacity 1s";

        document.body.appendChild(animation);

        setTimeout(() => {
          animation.style.transform = "translateY(-60px) scale(1.3)";
          animation.style.opacity = "0";
        }, 50);

        setTimeout(() => animation.remove(), 1000);
      }

      function showLeaderboard() {
        alert("–¢–∞–±–ª–∏—Ü–∞ –ª–∏–¥–µ—Ä–æ–≤ –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ!");
      }

      function showStats() {
        alert("–°—Ç–∞—Ç–∏—Å—Ç–∏–∫–∞ –≤ —Ä–∞–∑—Ä–∞–±–æ—Ç–∫–µ!");
      }

      function toggleSound() {
        soundEnabled = !soundEnabled;
        let soundButton = document.querySelector(".nav-button:last-child");
        soundButton.textContent = soundEnabled ? "üîä" : "üîá";
      }
